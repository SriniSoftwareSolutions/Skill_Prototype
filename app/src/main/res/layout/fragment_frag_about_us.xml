<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lab.abhishek.skill_prototype.FragAboutUs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/aboutUs1"/>

            <ImageView
                android:id="@+id/iv_ab_logo"
                android:layout_margin="10sp"
                android:src="@mipmap/place150x150"
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#APPNAME"
                android:textSize="25sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Mission"
                android:layout_weight="1"
                android:layout_marginTop="15sp"/>

            <View
                android:layout_width="120sp"
                android:layout_height="1dp"
                android:layout_marginTop="3sp"
                android:layout_weight="1"
                android:background="#9A000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/aboutUs2"/>

            <View
                android:layout_width="120sp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_marginTop="10sp"
                android:background="#9A000000" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow us"
                android:layout_weight="1"
                android:layout_marginTop="20sp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/abfb"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent" />

                <View
                    android:layout_width="20sp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/abyoutube"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"/>

                <View
                    android:layout_width="20sp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/abtwitter"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"/>

                <View
                    android:layout_width="20sp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/abweb"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"/>

                <View
                    android:layout_width="20sp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/ab_rate_us"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>

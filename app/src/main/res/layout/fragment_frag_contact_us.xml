<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lab.abhishek.skill_prototype.FragContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Name"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/ed_contact_name"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:backgroundTintMode="@android:color/transparent"
                android:cursorVisible="true"
                android:drawableBottom="@android:color/transparent"
                android:ems="10"
                android:hint="Name"
                android:layout_gravity="center_vertical"
                android:inputType="textAutoCorrect"
                android:singleLine="true"
                android:textColorHint="@color/colorPrimary_20_percent"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <ImageButton
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_marginRight="10sp"
                android:src="@mipmap/ic_person_black_24dp"
                android:tint="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="E-Mail"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/ed_contact_email"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:backgroundTintMode="@android:color/transparent"
                android:cursorVisible="true"
                android:drawableBottom="@android:color/transparent"
                android:ems="10"
                android:hint="E-Mail"
                android:layout_gravity="center_vertical"
                android:inputType="textAutoCorrect"
                android:singleLine="true"
                android:textColorHint="@color/colorPrimary_20_percent"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <ImageButton
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_marginRight="10sp"
                android:src="@mipmap/ic_email_black_24dp"
                android:tint="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Message"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/ll_editBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:minHeight="100sp"
        android:layout_marginTop="3dp"
        android:background="@drawable/edittext_layout" >


        <EditText
            android:nestedScrollingEnabled="true"
            android:id="@+id/ed_contact_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:backgroundTintMode="@android:color/transparent"
            android:cursorVisible="true"
            android:drawableBottom="@android:color/transparent"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Message"
            android:padding="10sp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary_20_percent"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_contact_send"
        android:layout_marginTop="10sp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="Send"
        android:layout_gravity="center"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:layout_marginBottom="40sp"/>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lab.abhishek.skill_prototype.Register"
    android:gravity="center">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_userImage"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@mipmap/userdp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="First Name"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/ed_fname"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:backgroundTintMode="@android:color/transparent"
                    android:cursorVisible="true"
                    android:drawableBottom="@android:color/transparent"
                    android:ems="10"
                    android:hint="First Name"
                    android:layout_gravity="center_vertical"
                    android:inputType="textAutoCorrect"
                    android:singleLine="true"
                    android:textColorHint="@color/colorPrimary_20_percent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageButton
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10sp"
                    android:src="@mipmap/ic_person_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Last Name"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/ed_lname"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:backgroundTintMode="@android:color/transparent"
                    android:cursorVisible="true"
                    android:drawableBottom="@android:color/transparent"
                    android:ems="10"
                    android:hint="Last Name"
                    android:layout_gravity="center_vertical"
                    android:inputType="textAutoCorrect"
                    android:singleLine="true"
                    android:textColorHint="@color/colorPrimary_20_percent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageButton
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10sp"
                    android:src="@mipmap/ic_people_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Location"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/ed_location"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:backgroundTintMode="@android:color/transparent"
                    android:cursorVisible="true"
                    android:drawableBottom="@android:color/transparent"
                    android:ems="10"
                    android:hint="Location"
                    android:layout_gravity="center_vertical|bottom"
                    android:gravity="bottom"
                    android:paddingBottom="6sp"
                    android:inputType="textAutoCorrect"
                    android:singleLine="true"
                    android:textColorHint="@color/colorPrimary_20_percent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageButton
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10sp"
                    android:src="@mipmap/ic_location_city_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="E-Mail"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:backgroundTintMode="@android:color/transparent"
                    android:cursorVisible="true"
                    android:drawableBottom="@android:color/transparent"
                    android:ems="10"
                    android:hint="E-Mail"
                    android:layout_gravity="center_vertical"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColorHint="@color/colorPrimary_20_percent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageButton
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10sp"
                    android:src="@mipmap/ic_email_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Password"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:backgroundTintMode="@android:color/transparent"
                    android:cursorVisible="true"
                    android:drawableBottom="@android:color/transparent"
                    android:ems="10"
                    android:hint="Password"
                    android:layout_gravity="center_vertical"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColorHint="@color/colorPrimary_20_percent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageButton
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10sp"
                    android:src="@mipmap/ic_vpn_key_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_register_form"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:background="@color/colorPrimary_50_percent"
            android:layout_marginTop="10sp"
            android:text="Register"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>
